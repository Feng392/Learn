/* pages/popup/index.wxss */
.mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, .5);
  z-index: -999;
  opacity: 0;
  visibility: hidden;
  transition: all 1s ease;
}
.mask.active {
  z-index: 999;
  opacity: .8;
  visibility: visible; 
}
.popup {
  position: fixed;
  bottom: 0;
  z-index: 9999;
  width: 100%;
  height: 50vh;
  background-color: #fff;
  color: #000;
  text-align: center;
  line-height: 50vh;
  transform: translateY(100%);
  transition: transform 1s ease;
}
.popup.active {
  transform: translateY(0);
}